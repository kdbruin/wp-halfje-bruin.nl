{
    "name": "halfje-bruin/halfje-bruin",
    "description": "Halfje-Bruin WordPress site",
    "authors": [
        {
            "name": "Kees de Bruin",
            "homepage": "https://www.halfje-bruin.nl/"
        }
    ],
    "type": "project",
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "config": {
        "vendor-dir": "vendor"
    },
    "require": {
        "vlucas/phpdotenv": "^1.0.6",
        "johnpbloch/wordpress": ">=4.9",
        "rarst/update-blocker": "^1.1",
        "wpackagist-plugin/gutenberg": "^3.5.0",
        "wpackagist-theme/gridsby": "*",
        "wpackagist-theme/twentyseventeen": "*",
        "wpackagist-theme/understrap": "*"
    },
    "require-dev": {
        "rarst/laps": "^1.4.4",
        "rarst/toolbar-theme-switcher": "^1.5",
        "wpackagist-plugin/a-fresher-cache": "*",
        "wpackagist-plugin/core-control": "*",
        "wpackagist-plugin/monster-widget": "*",
        "wpackagist-plugin/theme-check": "*"
    },
    "extra": {
        "wordpress-install-dir": "wp",
        "installer-paths": {
            "app/plugins/{$name}/": [
                "type:wordpress-plugin"
            ],
            "app/mu-plugins/{$name}/": [
                "type:wordpress-muplugin"
            ],
            "app/themes/{$name}/": [
                "type:wordpress-theme"
            ]
        }
    }
}
